@model BeatThePokemon.Models.ViewModels.AanvallenGevechtViewModel
@{
    ViewData["Title"] = "Aanvallen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Aanvallen</h1>

<form class="row" method="post" asp-action="VoerAanvalUit">
    @foreach (var a in Model.Aanvallen)
    {
        <div class="col-md-6">
            <button value="@a.Id" name="gAanvalId" class="btn-aanval">@a.Naam</button>
        </div>
    }
</form>